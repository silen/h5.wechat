                    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="gv">
                        <tr>
                            <th scope="col" width="3%">
                                ID
                            </th>
                              <th align="center" scope="col" abbr="lbtnOperate">操作</th>
                            <th scope="col"  ><span style="padding-top: 10px; padding-left: 10px; padding-right: 10px;">类别名称</span></th>
                            <th scope="col" width="12%">
                               上级分类</th>
                            <th scope="col" width="12%">排序</th>
                            <th scope="col" width="15%">
                                添加时间
                            </th>
                        </tr>
                        
                                
                              <foreach name='select' item='item' >
                                <tr onMouseOver="this.className='RecordRowOver'" onMouseOut="this.className=''">
                                    <td align="center">
                                       {$item.id}
                                    </td>
                                    <td align="center" style="width:60px;"> <a href="?c=tag&a=e&id={$item.tagid_int}"><img src="/assets/admin/images/edit.png" /> </a>
                                    <a href="javascript:;" onClick="javascript:if(confirm('你确信要删除[{$item.scenename_varchar}]吗？')) window.location='?c=tag&a=del&id={$item.tagid_int}&type={$type}&biztype_int={$item.biztype_int}'"><img src="/assets/admin/images/delet.png" /> </a>
                                      
                                    
                                    </td>
                                    <td>
                                        {$item.name_varchar} 
                                    </td>
                                    <td>
                                         {$item.biztype_int|getBiztypeCateNameN="$type",###}
                                    </td>
                                    <td>  {$item.sort}</td>
                                    <td>
                                    <if condition="$item['create_time'] gt 0">{$item.create_time}</if>
                                       
                                    </td>
                                </tr>
                                  </foreach>
            
                                <tr>
                                <td colspan="8">
                                 
                  
                     
                                </td>
                                </tr>
                            
                    </table>
                    
                    
                       <div class="pages">
                        {$page}
                </div>
                
</div>
        </div>
    </div>
